<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <ScrollView
        android:layout_width="449dp"
        android:layout_height="692dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/idCreationPageJannazah"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:autoSizeTextType="uniform"

                android:padding="20dp"
                android:text="Creation of Jannazah event" />

            <TextView
                android:id="@+id/idLabelNameDead"
                android:layout_width="402dp"
                android:layout_height="wrap_content"
                android:padding="20dp"

                android:text="Name of the dead " />

            <EditText
                android:id="@+id/nameDead"
                android:layout_width="381dp"
                android:layout_height="33dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:text="" />
            <TextView
                android:id="@+id/idLabelDate"
                android:layout_width="402dp"
                android:layout_height="wrap_content"
                android:padding="20dp"

                android:text=" Date event " />

            <EditText
                android:id="@+id/dateEvent"
                android:layout_width="381dp"
                android:layout_height="33dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:text="" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"


                android:padding="20dp"
                android:text="Choose the mosque on the map" />

            <Button
                android:id="@+id/chooseMosque"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="MosquÃ©es" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:padding="20dp"
                android:text="Choose the prayer" />


            <Spinner
                android:id="@+id/choosePrayer"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="20dp" />

            <TextView
                android:id="@+id/idLabelDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:padding="20dp"
                android:text="Description of the Janazah" />

            <EditText
                android:id="@+id/janazahDescription"
                android:layout_width="370dp"
                android:layout_height="150dp"
                android:background="@android:drawable/edit_text"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <Button
                android:id="@+id/submitEvent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Create" />
        </LinearLayout>
    </ScrollView>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.janazahapp.Navbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>




