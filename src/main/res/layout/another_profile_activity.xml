<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout2"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".AnotherProfileActivity">


    <TextView
        android:id="@+id/nameDead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center_horizontal"
        android:text="Name of dead"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/mosqueLocalisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NbParticipants"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text= "Mosque Adress :    "

        android:textColor="#000"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/dateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NbParticipants"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-2dp"
        android:text="Event Date :    "

        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/prayerDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameDead"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Prayer :    "
        android:textColor="#000"
        android:textSize="18sp"


        />

    <TextView
        android:id="@+id/NbParticipants"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prayerDay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="35dp"
        android:text="People :    "
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showComments"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardJanazahDescription"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="100dp"
        android:text="showAllComments"
        android:textColor="#000"
        android:textSize="13sp" />
    <Button
        android:id="@+id/participatePrayer"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/janazahDescription"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="15dp"
        android:text="DELETE THIS EVENT" />

    <TextView
        android:id="@+id/cardJanazahDescription"
        android:layout_width="365dp"

        android:layout_height="246dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Le lorem ipsum est, en imprimerie, une suite de mots sans signification utilisée à titre provisoire pour calibrer une mise en page, le texte définitif venant remplacer le faux-texte dès qu'il est prêt ou que la mise en page est achevée. Généralement, on utilise un texte en faux latin, le Lorem ipsum ou Lipsum." />


</RelativeLayout>